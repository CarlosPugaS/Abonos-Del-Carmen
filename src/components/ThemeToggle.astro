<button id="theme-toggle" class="group p-2 rounded-full hover:bg-black/10 dark:hover:bg-white/20 transition-colors">
    <svg id="theme-toggle-dark-icon" class="w-6 h-6 hidden group-[.dark]:block" fill="currentColor" viewBox="0 0 20 20"><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path></svg>
    <svg id="theme-toggle-light-icon" class="w-6 h-6 group-[.dark]:hidden" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 5.05A1 1 0 003.636 6.464l.707.707a1 1 0 001.414-1.414l-.707-.707zM3 11a1 1 0 100-2H2a1 1 0 100 2h1zM13.536 14.95l.707.707a1 1 0 01-1.414 1.414l-.707-.707a1 1 0 011.414-1.414z"></path></svg>
</button>

<script>
    const toggleButton = document.getElementById('theme-toggle');

    const toggle = () => {
        const isDark = document.documentElement.classList.toggle('dark');
        document.documentElement.classList.add(isDark ? 'dark' : 'light');
        document.documentElement.classList.remove(isDark ? 'light' : 'dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');

        // Add class to button to handle icon visibility
        toggleButton?.classList.toggle('dark', isDark);
    };

    toggleButton?.addEventListener('click', toggle);

    // Initial state based on theme
    if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        toggleButton?.classList.add('dark');
    } else {
        toggleButton?.classList.remove('dark');
    }
</script> 